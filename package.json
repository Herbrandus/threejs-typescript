{
  "name": "threejs-typescript",
  "version": "1.0.0",
  "description": "Basic Typescript project setup to use ThreeJS",
  "main": "index.js",
  "scripts": {
    "build": "rollup -c",
    "start": "npx concurrently \"rollup -c --watch src/app/main.ts\" \"lite-server\" \"sass --watch src/index.scss dist/css/styles.css\" ",
    "lint": "npx eslint . --ext .ts"
  },
  "type": "module",
  "keywords": [
    "3d",
    "three",
    "typescript"
  ],
  "author": "gerben boersma",
  "license": "ISC",
  "dependencies": {
    "typescript": "^4.1.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "eslint": "^7.17.0",
    "lite-server": "^2.6.1",
    "rollup": "^2.33.3",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "sass": "^1.32.4",
    "three": "^0.123.0"
  }
}
